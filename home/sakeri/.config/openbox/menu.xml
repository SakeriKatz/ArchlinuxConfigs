<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">
	<menu id="root-menu" label="Openbox 3">
		<separator label="Applications" />
		<menu id="apps-menu" label="Openbox 3" execute="xdg_menu --format openbox3-pipe --root-menu /etc/xdg/menus/arch-applications.menu" />
		<separator label="System" />
		<menu id="sys-menu" />
			<item label="Reconfigure">
				<action name="Reconfigure" />
			</item>
			<item label="Restart">
				<action name="Restart" />
			</item>
			<item label="Log Out">
				<action name="Exit">
					<prompt>yes</prompt>
				</action>
			</item>
		</menu>
	</menu>
</openbox_menu>
